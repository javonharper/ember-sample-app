<div class="letter_holder">
  <div class="letter">
    <h4>Dear Santa,</h4>
    <p>{{pitch}}</p>
    <p>{{ask}}:</p>
    <ul>
      {{#if gifts.length}}
        {{#each gifts}}
          <li>
            {{name}}
          </li>
        {{/each}}
      {{else}}
        <li>Nothing</li>
      {{/if}}
    </ul>
    <p>Sincerely,</p>
    <h4>{{author}}</h4>
  </div>
  {{#if gifts.length}}
    <button class="btn btn-danger" {{action sendToSanta}}>Send to Santa</button>
  {{/if}}
  <button class="btn btn-danger" {{action cancelLetter}}>I need to re-think this</button>
</div>
